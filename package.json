{
  "name": "dotairc",
  "version": "1.1.2",
  "description": "Generate .airc files for your AI agents",
  "main": "index.js",
  "bin": {
    "dotairc": "./index.js"
  },
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elecash/dotairc.git"
  },
  "bugs": {
    "url": "https://github.com/elecash/dotairc/issues"
  },
  "homepage": "https://github.com/elecash/dotairc#readme",
  "keywords": [
    "ai",
    "config",
    "generator"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
